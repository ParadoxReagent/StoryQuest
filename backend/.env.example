# StoryQuest Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# LLM Provider Configuration
# ===========================================
# Choose one: ollama, openai, anthropic, gemini, openrouter, lmstudio
LLM_PROVIDER=ollama

# ===========================================
# Ollama (Local LLM)
# ===========================================
# If using Ollama running on your host machine
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# ===========================================
# OpenAI (Cloud LLM)
# ===========================================
# Uncomment and set if using OpenAI
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4o-mini

# ===========================================
# Anthropic (Cloud LLM)
# ===========================================
# Uncomment and set if using Anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# ===========================================
# Gemini (Cloud LLM)
# ===========================================
# Uncomment and set if using Google Gemini
# GEMINI_API_KEY=ai-your-gemini-api-key-here
# GEMINI_MODEL=gemini-1.5-flash

# ===========================================
# OpenRouter (Cloud LLM aggregator)
# ===========================================
# Uncomment and set if using OpenRouter
# OPENROUTER_API_KEY=or-your-openrouter-api-key-here
# OPENROUTER_MODEL=anthropic/claude-3.5-haiku
# OPENROUTER_SITE_URL=https://storyquest.local
# OPENROUTER_APP_NAME=StoryQuest

# ===========================================
# LM Studio (Local LLM with OpenAI-compatible API)
# ===========================================
# Uncomment and set if using LM Studio
# LMSTUDIO_BASE_URL=http://localhost:1234
# LMSTUDIO_MODEL=local-model
# Note: LM Studio runs on port 1234 by default

# ===========================================
# Safety & Content Moderation
# ===========================================
USE_ENHANCED_FILTER=true
USE_MODERATION_API=false
LOG_VIOLATIONS=true
ENABLE_RATE_LIMITING=true

# Optional: OpenAI Moderation API (requires OpenAI API key)
# USE_MODERATION_API=true
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Database Configuration
# ===========================================
# SQLite (default for local development)
DATABASE_URL=sqlite:///./storyquest.db

# PostgreSQL (optional - for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/storyquest
